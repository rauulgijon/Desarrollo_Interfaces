<Window x:Class="ApiRest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ApiRest"
        mc:Ignorable="d"
        Title="Spoonacular Recipes API" Height="600" Width="900">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.ColumnSpan="2" Margin="0,0,0,8">
            <Button Name="RefreshButton" Width="150" Margin="0,0,8,0" Click="RefreshButton_Click">Get Popular Recipes</Button>
        </StackPanel>

        <GroupBox Header="Recipes List" Grid.Row="1" Grid.Column="0" Margin="0,0,8,0">
            <DockPanel>
                <ListBox Name="ObjectsListBox" DisplayMemberPath="_display" SelectionChanged="ObjectsListBox_SelectionChanged" />
            </DockPanel>
        </GroupBox>

        <GroupBox Header="Recipe Details (JSON)" Grid.Row="1" Grid.Column="1">
            <Grid>
                <TextBox Name="DetailsTextBox" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" TextWrapping="Wrap" IsReadOnly="True" />
            </Grid>
        </GroupBox>

        <GroupBox Header="Search Recipes (e.g., 'Pasta', 'Chicken')" Grid.Row="2" Grid.ColumnSpan="2" Margin="0,8,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBox Name="SearchTextBox" Height="30" VerticalContentAlignment="Center" FontSize="14" Margin="0,0,8,0"/>
                <StackPanel Grid.Column="1" Orientation="Vertical">
                    <Button Name="SearchButton" Width="120" Height="30" Click="SearchButton_Click">Search</Button>
                </StackPanel>
            </Grid>
        </GroupBox>
    </Grid>
</Window>