<Window x:Class="DatagridPersonas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DatagridPersonas"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="3.5*"/>
        </Grid.RowDefinitions>
        <TabControl Grid.Row="1" TabStripPlacement="Left">
            <TabItem Header="Gestión Personas">
    <Grid Background="#FFE5E5E5">
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1.5*"/>
        </Grid.RowDefinitions>

       
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

           
            <StackPanel Grid.Column="0" Margin="10">
                <Label Content="Nombre"/>
                <TextBox x:Name="txtNombre" Width="120"/>

                <Label Content="Apellido" Margin="0,20,0,0"/>
                <TextBox x:Name="txtApellido" Width="120"/>

                <Label Content="Edad" Margin="0,20,0,0"/>
                <TextBox x:Name="txtEdad" Width="120"/>
            </StackPanel>

            
            <DataGrid x:Name="dgvPersonas" Grid.Column="1" AutoGenerateColumns="False" Margin="10"
                      SelectionChanged="dgvPersonas_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}"/>
                    <DataGridTextColumn Header="Apellido" Binding="{Binding Apellido}"/>
                    <DataGridTextColumn Header="Edad" Binding="{Binding Edad}"/>
                </DataGrid.Columns>
            </DataGrid>

        </Grid>

        
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="bntAdd" Content="Agregar" Margin="10" Click="btnAdd_Click"/>
            <Button x:Name="btnModificar" Grid.Column="1" Content="Modificar" Margin="10" Click="btnModificar_Click"/>
            <Button x:Name="bntEliminar" Grid.Column="2" Content="Eliminar" Margin="10" Click="btnEliminar_Click"/>
        </Grid>

        
        <StackPanel Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10">

            
            <Label Content="Edad:" VerticalAlignment="Center"/>
            <TextBox x:Name="txtEdadFiltro" Width="60" Margin="5"/>

            <ComboBox x:Name="cmbCondicionEdad" Width="120" Margin="5">
                <ComboBoxItem Content="Mayores"/>
                <ComboBoxItem Content="Menores"/>
                <ComboBoxItem Content="Iguales"/>
            </ComboBox>

            <Button x:Name="btnFiltrarEdad" Content="Filtrar edad" Width="100" Margin="5" Click="btnFiltrarEdad_Click"/>

            
            <Label Content="Buscar:" VerticalAlignment="Center" Margin="15,0,0,0"/>
            <TextBox x:Name="txtBuscar" Width="120" Margin="5"/>
            <Button x:Name="btnBuscar" Content="Buscar" Width="80" Margin="5" Click="btnBuscar_Click"/>

            
            <Label Content="Ordenar:" VerticalAlignment="Center" Margin="15,0,0,0"/>
            <ComboBox x:Name="cmbOrdenar" Width="120" Margin="5">
                <ComboBoxItem Content="Nombre"/>
                <ComboBoxItem Content="Apellidos"/>
                <ComboBoxItem Content="Edad"/>
            </ComboBox>

            <Button x:Name="btnOrdenar" Content="Ordenar" Width="80" Margin="5" Click="btnOrdenar_Click"/>

            
            <Button x:Name="btnMostrarTodos" Content="Mostrar Todos" Width="120" Margin="15,5" Click="btnMostrarTodos_Click"/>
        </StackPanel>

    </Grid>
</TabItem>

            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
