<Window x:Class="MasterDetailWPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Master-Detail Example"
        Height="400"
        Width="650">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <ListBox ItemsSource="{Binding Customers}"
                 DisplayMemberPath="Name"
                 SelectedItem="{Binding SelectedCustomer, Mode=TwoWay}"
                 Margin="10"/>

        <StackPanel Grid.Column="1" Margin="20">
            <TextBlock Text="Customer Detail" FontSize="20" Margin="0,0,0,10"/>
            <TextBlock Text="{Binding SelectedCustomer.Name}"/>
            <TextBlock Text="{Binding SelectedCustomer.Email}"/>
            <TextBlock Text="{Binding SelectedCustomer.Phone}"/>
        </StackPanel>
    </Grid>
</Window>
