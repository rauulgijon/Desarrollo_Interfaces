<Window x:Class="Saludo1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Saludo1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="txtNombre" HorizontalAlignment="Left" Margin="253,130,0,0" TextWrapping="Wrap" Text="Nombre Completo" VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged"/>
        <TextBox x:Name="txtEdad" HorizontalAlignment="Left" Margin="253,153,0,0" TextWrapping="Wrap" Text="Edad" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtSexo" HorizontalAlignment="Left" Margin="253,176,0,0" TextWrapping="Wrap" Text="Sexo" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtCurso" HorizontalAlignment="Left" Margin="253,199,0,0" TextWrapping="Wrap" Text="Curso" VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged"/>
        <TextBox x:Name="txtHorario" HorizontalAlignment="Left" Margin="253,222,0,0" TextWrapping="Wrap" Text="Horario" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Window>
