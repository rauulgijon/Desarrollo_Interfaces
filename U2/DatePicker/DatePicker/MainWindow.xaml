<Window x:Class="DatePicker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DatePicker"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20,15,20,25">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="400"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="125"/>
                    <RowDefinition Height="200"/>
                </Grid.RowDefinitions>
                <TextBlock  Text="Selecciona una fecha: " Margin="39,10,37,85" Height="30" />
                <DatePicker Grid.Column="0"  Name="dpFecha" SelectedDateFormat="Short" Height="24" Margin="54,54,52,47"/>
                <Button Grid.Column="0"  Content="Mostrar fecha" Click="Button_Click" Margin="77,94,77,11" Height="20" />
                <Label Grid.Column="0" Grid.Row="1" Content="Nombre" Width="80" HorizontalAlignment="Left"/>
                <TextBox Grid.Column="0" Grid.Row="1" Name="txtNombre" Margin="10,82,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged" Height="18"/>
                <Label Content="Apellidos" Width="80" HorizontalAlignment="Left" Margin="0,53,0,23" Grid.Row="1"/>
                <TextBox Name="txtApellidos" Margin="10,24,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged" Height="18" Grid.Row="1"/>
                <Label Content="Edad" Width="80" HorizontalAlignment="Left" Margin="0,105,0,-30" Grid.Row="1" Grid.RowSpan="2"/>
                <TextBox Name="txtEdad" Margin="10,135,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged" Height="18" Grid.Row="1"/>
                <DataGrid Grid.Row="1" Grid.Column="1" AutoGenerateColumns="False" HorizontalAlignment="Center" VerticalAlignment="Top"  SelectionChanged="dvgPersonas_SelectionChanged" Margin="0,0,0,0" >
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}"/>
                        <DataGridTextColumn Header="Apellido" Binding="{Binding Apellido}"/>
                        <DataGridTextColumn Header="Edad" Binding="{Binding Edad}"/>
                        <DataGridTextColumn Header="Fecha" Binding="{Binding Fecha}"/>
                    </DataGrid.Columns>
                </DataGrid>
                <Button x:Name="Agregar" Content="Agregar" Height="30" Width="60" RenderTransformOrigin="0.494,0.503" Margin="20,225,120,-55" Grid.Row="1"/>
                <Button x:Name="Modificar" Content="Modificar"  Height="30" Width="60" Margin="151,225,189,-55" Grid.Row="1" Grid.Column="1"/>
                <Button x:Name="Eliminar" Content="Eliminar"  Height="30" Width="60" Margin="457,225,-117,-55" Grid.Column="1" Grid.Row="1"/>

            </Grid>
        </StackPanel>
    </Grid>
</Window>
