<Window x:Class="DatePicker_ejemplo1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DatePicker_ejemplo1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <StackPanel Margin="20">
        <!-- Texto descriptivo -->
        <TextBlock Text="Seleccione la fecha de la partida:" Margin="0,0,0,10"/>

        <!-- Control DatePicker para elegir una fecha -->
        <!-- SelectedDateFormat="Short" muestra la fecha en formato corto (dd/MM/yyyy) -->
        <DatePicker Name="dpFechaJuego" SelectedDateFormat="Short" />

        <!-- Botón que al hacer clic mostrará la fecha seleccionada -->
        <Button Content="Mostrar Fecha" Click="Button_Click" Margin="0,10,0,0"/>
        </StackPanel>


    </Grid>
</Window>
