<Window x:Class="MiniHito.view.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Acceso Usuario" 
        Height="500" Width="380"
        WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize"
        Background="#ecf0f1">

    <Grid>
        <Border Background="White" 
                CornerRadius="15" 
                Width="300"
                Padding="25"
                VerticalAlignment="Center" 
                HorizontalAlignment="Center">

            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="0" Opacity="0.15"/>
            </Border.Effect>

            <StackPanel>
                <Label Content="BIENVENIDO" 
                       HorizontalAlignment="Center" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="#3498db" 
                       Margin="0,0,0,20"/>

                <Label Content="Usuario:" FontWeight="SemiBold" Margin="0,5,0,0"/>
                <TextBox x:Name="txtUsuario" Height="35" FontSize="14" VerticalContentAlignment="Center" Margin="0,0,0,15"/>

                <Label Content="Contraseña:" FontWeight="SemiBold" Margin="0,5,0,0"/>
                <PasswordBox x:Name="txtPass" Height="35" FontSize="14" VerticalContentAlignment="Center" Margin="0,0,0,25"/>

                <Button x:Name="btnLogin" Content="INICIAR SESIÓN" Click="btnLogin_Click" Height="40" Margin="0,0,0,10" Background="#3498db" Foreground="White" BorderThickness="0" FontWeight="Bold" Cursor="Hand"/>

                <Button x:Name="btnSalir" Content="SALIR" Click="btnSalir_Click" Height="40" Background="#95a5a6" Foreground="White" BorderThickness="0" FontWeight="Bold" Cursor="Hand"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>