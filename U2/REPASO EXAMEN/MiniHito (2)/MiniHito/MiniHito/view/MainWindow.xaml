<!-- Ventana principal de la aplicación -->
<!-- Define la interfaz de usuario con un sistema de pestañas para diferentes módulos -->
<Window x:Class="MiniHito.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="850">
    <Grid>
        <!-- Define la estructura principal con filas y columnas -->
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <!-- Fila para el encabezado -->
            <RowDefinition Height="*"/>
            <!-- Fila principal que ocupa el espacio restante -->
        </Grid.RowDefinitions>


        <!-- TabControl principal con pestañas laterales para la navegación -->
        <TabControl Grid.Row="1" Grid.Column="0" TabStripPlacement="Left">
            <!-- Pestaña INICIO (sin funcionalidad implementada) -->
            <TabItem Header="INICIO">
                <Grid Background="LightGray"/>
            </TabItem>

            <!-- Pestaña PARTICIPANTES - Gestión de alumnos y grupos -->
            <TabItem Header="PARTICIPANTES">
                <Grid Background="LightGray">
                    <TabControl SelectionChanged="TabControl_SelectionChanged">
                        <!-- Sub-pestaña ALUMNADO - CRUD de alumnos -->
                        <TabItem Header="ALUMNADO">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <!-- Fila para búsqueda/cabecera -->
                                    <RowDefinition Height="*"/>
                                    <!-- Fila para DataGrid y formulario -->
                                    <RowDefinition Height="Auto"/>
                                    <!-- Fila para botones -->
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="28*" MinWidth="300"/>
                                    <ColumnDefinition Width="47*"/>
                                    <ColumnDefinition Width="23*"/>
                                    <!-- Columna para el DataGrid -->
                                    <ColumnDefinition Width="350"/>
                                    <!-- Columna para el formulario -->
                                </Grid.ColumnDefinitions>

                                <!-- Campo de texto superior (búsqueda - no implementado) -->
                                <TextBox Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"
                                         Margin="10,10,0,10" Width="300" HorizontalAlignment="Left"
                                         TextWrapping="Wrap"/>

                                <!-- DataGrid que muestra la lista de alumnos -->
                                <DataGrid x:Name="dataGridPersonas"
                                          Grid.Row="1" Grid.Column="0"
                                          Margin="10,10,10,10"
                                          MinWidth="300"
                                          SelectionChanged="dataGridPersonas_SelectionChanged"
                                          AutoGenerateColumns="False" Grid.ColumnSpan="3">
                                    <DataGrid.Columns>
                                        <!-- Columnas personalizadas para mostrar datos del alumno -->
                                        <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="auto" />
                                        <DataGridTextColumn Header="Apellidos" Binding="{Binding Apellidos}" Width="auto" />
                                        <DataGridTextColumn Header="Curso" Binding="{Binding Especialidad}" Width="auto" />
                                    </DataGrid.Columns>
                                </DataGrid>

                                <!-- Panel de formulario a la derecha para agregar/editar alumnos -->
                                <StackPanel Grid.Row="1" Grid.Column="3" Margin="10,10,20,0" VerticalAlignment="Top">
                                    <Label Content="ALUMNADO" FontWeight="Bold" FontSize="16" Margin="0,0,0,10" HorizontalAlignment="Center"/>

                                    <!-- Campo Nombre -->
                                    <Label Content="Nombre" FontSize="14" Margin="0,5,0,2"/>
                                    <TextBox x:Name="txtNombre" Height="25" FontSize="14" Margin="0,0,0,5"/>

                                    <!-- Campo Apellido -->
                                    <Label Content="Apellido" FontSize="14" Margin="0,5,0,2"/>
                                    <TextBox x:Name="txtApellido" Height="25" FontSize="14" Margin="0,0,0,5"/>


                                    <!-- ComboBox para seleccionar el curso -->
                                    <Label Content="Curso" FontSize="14" Margin="0,5,0,2"/>
                                    <ComboBox x:Name="cmbCurso" Height="25" FontSize="14" Margin="0,0,0,5">
                                        <!-- Opciones de cursos con Tag para identificar el valor -->
                                        <ComboBoxItem Content="SC1" Tag="1"/>
                                        <ComboBoxItem Content="SC2" Tag="2"/>
                                    </ComboBox>
                                </StackPanel>

                                <!-- Botones de acción alineados a la derecha -->
                                <StackPanel Grid.Row="2" Grid.Column="3" Orientation="Horizontal"
                                            HorizontalAlignment="Left" Margin="42,0,0,0" VerticalAlignment="Center">
                                    <Button x:Name="btnAgregar" Content="Agregar" Width="90" Height="30" Margin="3" Click="btnAgregar_Click"/>
                                    <Button x:Name="btnModificar" Content="Modificar" Width="90" Height="30" Margin="3" Click="btnModificar_Click"/>
                                    <Button x:Name="btnEliminar" Content="Eliminar" Width="90" Height="30" Margin="3" Click="btnEliminar_Click"/>
                                </StackPanel>
                            </Grid>
                        </TabItem>

                        <!-- Sub-pestaña GRUPOS - Gestión de grupos (funcionalidad no implementada) -->
                        <TabItem Header="GRUPOS" Margin="-2,-2,-3,0">
                            <Grid Background="#FFE5E5E5">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <ListBox x:Name="lstAlumnosSinGrupo" Grid.Column="0" Margin="20,0,20,0" 
                 DisplayMemberPath="NombreCompleto"/>

                                <StackPanel Grid.Column="1" Grid.Row="0" Orientation="Vertical" Height="156" Margin="20,20,20,0">
                                    <Button x:Name="btnMoverDerecha" Content="&gt;&gt;" Height="34" Width="83" Margin="0,30,0,0" 
                    Click="btnMoverDerecha_Click"/>

                                    <Button x:Name="btnMoverIzquierda" Content="&lt;&lt;" Height="34" Width="83" Margin="0,10,0,0" 
                    Click="btnMoverIzquierda_Click"/>
                                </StackPanel>

                                <ListBox x:Name="lstAlumnosEnGrupo" Grid.Column="2" Margin="20,0,20,0" 
                 DisplayMemberPath="NombreCompleto"/>

                                <StackPanel Grid.Column="3" Grid.Row="0" Orientation="Vertical" HorizontalAlignment="Center">
                                    <Label Content="NOMBRE GRUPO" FontWeight="Bold" HorizontalAlignment="Center"/>
                                    <TextBox x:Name="txtNombreGrupo" Height="25" Width="150" FontSize="14" Margin="0,10,0,5"/>
                                    <Button x:Name="btnGuardarGrupo" Content="Añadir/Modificar" Height="34" Width="130" Margin="0,10,0,0" FontWeight="Bold" 
                    Click="btnGuardarGrupo_Click"/>
                                </StackPanel>

                                <Rectangle Grid.Row="1" Grid.ColumnSpan="4" HorizontalAlignment="Left" Height="11" Margin="20,10,0,0" Stroke="Yellow" Fill="Yellow" VerticalAlignment="Top" Width="697" RadiusX="20" RadiusY="20"/>

                                <ListBox x:Name="lstGrupos" Grid.Column="1" Grid.Row="2" Margin="20,55,20,6" Height="158" 
                 DisplayMemberPath="Nombre" SelectionChanged="lstGrupos_SelectionChanged"/>

                                <Label Grid.Row="2" Content="NOMBRE GRUPO SELECIONADO" Grid.Column="1" Margin="0,20,0,0" FontWeight="Bold"/>

                                <Button x:Name="btnEliminarGrupo" Content="Eliminar" Grid.Column="3" Grid.Row="2" Height="34" Width="130" Margin="0,10,0,0" FontWeight="Bold" 
                Click="btnEliminarGrupo_Click"/>
                            </Grid>
                        </TabItem>
                    </TabControl>
                </Grid>
            </TabItem>

            <!-- Pestañas adicionales sin funcionalidad implementada -->
            <TabItem Header="EMPRESAS">
                <Grid Background="LightGray"/>
            </TabItem>
            <TabItem Header="RETOS">
                <Grid Background="LightGray"/>
            </TabItem>
            <TabItem Header="TALENT LAB">
                <Grid Background="LightGray"/>
            </TabItem>
            <TabItem Header="USUARIOS">
                <Grid Background="LightGray"/>
            </TabItem>
        </TabControl>

        <!-- Título principal de la aplicación en la parte superior -->
        <Grid Grid.Row="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" Height="96" VerticalAlignment="Center" Width="800">
            <Label Content="¿ACEPTAS EL RETO?" HorizontalAlignment="Center" VerticalAlignment="Center" Height="44" Width="238" FontSize="26"/>
        </Grid>
    </Grid>
</Window>

