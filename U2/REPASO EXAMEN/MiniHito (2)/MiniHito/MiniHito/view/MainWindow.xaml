<Window x:Class="MiniHito.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="850">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" HorizontalAlignment="Center" Height="96" VerticalAlignment="Center" Width="800">
            <Label Content="¿ACEPTAS EL RETO?" HorizontalAlignment="Center" VerticalAlignment="Center" Height="44" Width="238" FontSize="26"/>
        </Grid>

        <TabControl Grid.Row="1" TabStripPlacement="Left" SelectionChanged="TabControl_SelectionChanged">
            <TabItem Header="INICIO">
                <Grid Background="LightGray"/>
            </TabItem>

            <TabItem Header="PARTICIPANTES">
                <Grid Background="LightGray">
                    <TabControl SelectionChanged="TabControl_SelectionChanged">

                        <TabItem Header="ALUMNADO">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="28*" MinWidth="300"/>
                                    <ColumnDefinition Width="47*"/>
                                    <ColumnDefinition Width="23*"/>
                                    <ColumnDefinition Width="350"/>
                                </Grid.ColumnDefinitions>

                                <TextBox Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Margin="10,10,0,10" Width="300" HorizontalAlignment="Left" TextWrapping="Wrap"/>

                                <DataGrid x:Name="dataGridPersonas" Grid.Row="1" Grid.Column="0" Margin="10" MinWidth="300" SelectionChanged="dataGridPersonas_SelectionChanged" AutoGenerateColumns="False" Grid.ColumnSpan="3">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="auto" />
                                        <DataGridTextColumn Header="Apellidos" Binding="{Binding Apellidos}" Width="auto" />
                                        <DataGridTextColumn Header="Curso" Binding="{Binding Especialidad}" Width="auto" />
                                    </DataGrid.Columns>
                                </DataGrid>

                                <StackPanel Grid.Row="1" Grid.Column="3" Margin="10,10,20,0" VerticalAlignment="Top">
                                    <Label Content="ALUMNADO" FontWeight="Bold" FontSize="16" Margin="0,0,0,10" HorizontalAlignment="Center"/>
                                    <Label Content="Nombre" FontSize="14" Margin="0,5,0,2"/>
                                    <TextBox x:Name="txtNombre" Height="25" FontSize="14" Margin="0,0,0,5"/>
                                    <Label Content="Apellido" FontSize="14" Margin="0,5,0,2"/>
                                    <TextBox x:Name="txtApellido" Height="25" FontSize="14" Margin="0,0,0,5"/>
                                    <Label Content="Curso" FontSize="14" Margin="0,5,0,2"/>
                                    <ComboBox x:Name="cmbCurso" Height="25" FontSize="14" Margin="0,0,0,5">
                                        <ComboBoxItem Content="SC1" Tag="1"/>
                                        <ComboBoxItem Content="SC2" Tag="2"/>
                                    </ComboBox>
                                </StackPanel>

                                <StackPanel Grid.Row="2" Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Left" Margin="42,0,0,0" VerticalAlignment="Center">
                                    <Button x:Name="btnAgregar" Content="Agregar" Width="90" Height="30" Margin="3" Click="btnAgregar_Click"/>
                                    <Button x:Name="btnModificar" Content="Modificar" Width="90" Height="30" Margin="3" Click="btnModificar_Click"/>
                                    <Button x:Name="btnEliminar" Content="Eliminar" Width="90" Height="30" Margin="3" Click="btnEliminar_Click"/>
                                </StackPanel>
                            </Grid>
                        </TabItem>

                        <TabItem Header="GRUPOS" Margin="-2,-2,-3,0">
                            <Grid Background="#FFE5E5E5">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <ListBox x:Name="lstAlumnosSinGrupo" Grid.Column="0" Margin="20,20,20,0" Width="150" Height="200" DisplayMemberPath="NombreCompleto"/>

                                <StackPanel Grid.Column="1" Grid.Row="0" Orientation="Vertical" VerticalAlignment="Center" Margin="10,0">
                                    <Button x:Name="btnMoverDerecha" Content="&gt;&gt;" Height="34" Width="83" Margin="0,10" Click="btnMoverDerecha_Click"/>
                                    <Button x:Name="btnMoverIzquierda" Content="&lt;&lt;" Height="34" Width="83" Margin="0,10" Click="btnMoverIzquierda_Click"/>
                                </StackPanel>

                                <ListBox x:Name="lstAlumnosEnGrupo" Grid.Column="2" Margin="20,20,20,0" Width="150" Height="200" DisplayMemberPath="NombreCompleto"/>

                                <StackPanel Grid.Column="3" Grid.Row="0" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Label Content="NOMBRE GRUPO" FontWeight="Bold" HorizontalAlignment="Center"/>
                                    <TextBox x:Name="txtNombreGrupo" Height="25" Width="150" FontSize="14" Margin="0,10,0,5"/>
                                    <Button x:Name="btnGuardarGrupo" Content="Añadir/Modificar" Height="34" Width="130" Margin="0,10,0,0" FontWeight="Bold" Click="btnGuardarGrupo_Click"/>
                                </StackPanel>

                                <Rectangle Grid.Row="1" Grid.ColumnSpan="4" HorizontalAlignment="Stretch" Height="11" Margin="20,20" Stroke="Yellow" Fill="Yellow" RadiusX="20" RadiusY="20"/>

                                <StackPanel Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="2" Margin="0,0,0,20">
                                    <Label Content="NOMBRE GRUPO SELECCIONADO" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,5"/>

                                    <ListBox x:Name="lstGrupos" 
                                         Height="150" 
                                         Width="200"
                                         HorizontalAlignment="Center"
                                         DisplayMemberPath="Nombre" 
                                         SelectionChanged="lstGrupos_SelectionChanged"
                                         Background="White"
                     BorderBrush="Gray"/>
                                </StackPanel>

                                <Button x:Name="btnEliminarGrupo" Content="Eliminar" Grid.Column="3" Grid.Row="2" Height="34" Width="130" VerticalAlignment="Top" Margin="0,30,0,0" FontWeight="Bold" Click="btnEliminarGrupo_Click"/>
                            </Grid>
                        </TabItem>
                    </TabControl>
                </Grid>
            </TabItem>

            <TabItem Header="EMPRESAS">
                <Grid/>
            </TabItem>
            <TabItem Header="RETOS">
                <Grid/>
            </TabItem>
            <TabItem Header="TALENT LAB">
                <Grid/>
            </TabItem>
            <TabItem Header="USUARIOS">
                <Grid/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>