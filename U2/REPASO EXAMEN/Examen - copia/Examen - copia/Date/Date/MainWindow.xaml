<Window x:Class="Date.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Date"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin=" 20">
            <TextBlock Text="Selecciona una fecha: " Margin=" 0,0,0,20"/>
            <DatePicker Name="dpFecha" SelectedDateFormat="Short"/>
            <Button Content="Mostrar Fecha" Click="Btn_Click" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
