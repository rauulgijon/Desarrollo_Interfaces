<Window x:Class="ControlPeliculas2526.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControlPeliculas2526"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label Name="lblTitulo" Content="Escribe el título de la película" HorizontalAlignment="Center" Margin="20,10,20,0" VerticalAlignment="Top" Width="Auto"/>
        <TextBox HorizontalAlignment="Left" Margin="374,37,0,0" Grid.Row="1" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="373,33,0,0" Grid.Row="2" VerticalAlignment="Top"/>
        <ComboBox HorizontalAlignment="Center" Margin="0,20,0,0" Grid.Row="3" VerticalAlignment="Top" Width="120"/>
        <Label Content="Label" HorizontalAlignment="Left" Margin="412,0,0,0" Grid.Row="4" VerticalAlignment="Center"/>
        <ListBox Grid.Row="5" d:ItemsSource="{d:SampleData ItemCount=5}"/>
    </Grid>
</Window>
