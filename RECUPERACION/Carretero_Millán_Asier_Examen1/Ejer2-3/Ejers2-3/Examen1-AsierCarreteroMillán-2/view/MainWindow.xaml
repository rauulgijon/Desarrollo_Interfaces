<Window x:Class="Minihito2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Minihito2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="3.5*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="#FF7C067D">
            <TextBlock x:Name="txtSerpientes" Text="Serpientes" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
        </Grid>
        <TabControl Grid.Row="1">
            <TabItem Header="Juego" Padding="40,5">
                <Grid Background="#FFE5E5E5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="5*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="2*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock Text="numero de paredes" FontWeight="Bold" HorizontalAlignment="Center"/>
                                    <TextBox x:Name="txtPared" Text="0" FontSize="14" HorizontalAlignment="Center" Width="110"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1">
                                    <Button x:Name="btnMaspared" Content="+" Width="80" Height="20" HorizontalAlignment="Center" Background="#FF7C067D" Foreground="White" Margin="0,5,0,0" Click="btnMaspared_Click"/>
                                    <Button x:Name="btnMenospared" Content="-" Width="80" Height="20" HorizontalAlignment="Center" Background="#FF7C067D" Foreground="White" Margin="0,5,0,0" Click="btnMenospared_Click"/>
                                </StackPanel>
                            </Grid>
                            <Grid Grid.Column="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock Text="numero de ratones" FontWeight="Bold" HorizontalAlignment="Center"/>
                                    <TextBox x:Name="txtRatones" Text="0" FontSize="14" HorizontalAlignment="Center" Width="110"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1">
                                    <Button x:Name="btnMasratones" Content="+" Width="80" Height="20" HorizontalAlignment="Center" Background="#FF7C067D" Foreground="White" Margin="0,5,0,0" Click="btnMasratones_Click"/>
                                    <Button x:Name="btnMenosratones" Content="-" Width="80" Height="20" HorizontalAlignment="Center" Background="#FF7C067D" Foreground="White" Margin="0,5,0,0" Click="btnMenosratones_Click"/>
                                </StackPanel>
                            </Grid>
                        </Grid>
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="0">
                                    <StackPanel>
                                        <TextBlock Text="NICKJUGDOR" Width="90"/>
                                    </StackPanel>
                                </Grid>
                                <Grid Grid.Column="1">
                                    <StackPanel>
                                        <TextBox x:Name="txtNickjugador" FontSize="14" Width="110"/>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                            <Grid Grid.Column="3">
                                <Button x:Name="txtIniciar" Content="Iniciar Juego" Width="100" Height="30" HorizontalAlignment="Center" Background="#FF7C067D" Foreground="White" Click="txtIniciar_Click"/>
                            </Grid>

                        </Grid>
                    </Grid>
                    <Grid Grid.Row="1">
                        <Rectangle Fill="Yellow" Height="18" Margin="10,0"/>
                    </Grid>
                    <Grid Grid.Row="2" >
                        <Grid Margin="100,0" Background="White" Name="gridJuego">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Label Grid.Row="0" Grid.Column="0" BorderBrush="#FF7C067D" BorderThickness="1"/>
                            <Label Grid.Row="0" Grid.Column="1" BorderBrush="#FF7C067D" BorderThickness="1"/>
                            <Label Grid.Row="0" Grid.Column="2" BorderBrush="#FF7C067D" BorderThickness="1"/>
                            <Label Grid.Row="0" Grid.Column="3" BorderBrush="#FF7C067D" BorderThickness="1"/>
                            <Label Grid.Row="0" Grid.Column="4" BorderBrush="#FF7C067D" BorderThickness="1"/>
                            <Label Grid.Row="0" Grid.Column="5" BorderBrush="#FF7C067D" BorderThickness="1"/>

                            <Label Grid.Row="1" Grid.Column="0" BorderBrush="#FF7C067D" BorderThickness="1"/>
                            <Label Grid.Row="1" Grid.Column="1" BorderBrush="#FF7C067D" BorderThickness="1"/>
                            <Label Grid.Row="1" Grid.Column="2" BorderBrush="#FF7C067D" BorderThickness="1"/>
                            <Label Grid.Row="1" Grid.Column="3" BorderBrush="#FF7C067D" BorderThickness="1"/>
                            <Label Grid.Row="1" Grid.Column="4" BorderBrush="#FF7C067D" BorderThickness="1"/>
                            <Label Grid.Row="1" Grid.Column="5" BorderBrush="#FF7C067D" BorderThickness="1"/>

                            <Label Grid.Row="2" Grid.Column="0" BorderBrush="#FF7C067D" BorderThickness="1"/>
                            <Label Grid.Row="2" Grid.Column="1" BorderBrush="#FF7C067D" BorderThickness="1"/>
                            <Label Grid.Row="2" Grid.Column="2" BorderBrush="#FF7C067D" BorderThickness="1"/>
                            <Label Grid.Row="2" Grid.Column="3" BorderBrush="#FF7C067D" BorderThickness="1"/>
                            <Label Grid.Row="2" Grid.Column="4" BorderBrush="#FF7C067D" BorderThickness="1"/>
                            <Label Grid.Row="2" Grid.Column="5" BorderBrush="#FF7C067D" BorderThickness="1"/>

                            <Label Grid.Row="3" Grid.Column="0" BorderBrush="#FF7C067D" BorderThickness="1"/>
                            <Label Grid.Row="3" Grid.Column="1" BorderBrush="#FF7C067D" BorderThickness="1"/>
                            <Label Grid.Row="3" Grid.Column="2" BorderBrush="#FF7C067D" BorderThickness="1"/>
                            <Label Grid.Row="3" Grid.Column="3" BorderBrush="#FF7C067D" BorderThickness="1"/>
                            <Label Grid.Row="3" Grid.Column="4" BorderBrush="#FF7C067D" BorderThickness="1"/>
                            <Label Grid.Row="3" Grid.Column="5" BorderBrush="#FF7C067D" BorderThickness="1"/>

                            <Label Grid.Row="4" Grid.Column="0" BorderBrush="#FF7C067D" BorderThickness="1"/>
                            <Label Grid.Row="4" Grid.Column="1" BorderBrush="#FF7C067D" BorderThickness="1"/>
                            <Label Grid.Row="4" Grid.Column="2" BorderBrush="#FF7C067D" BorderThickness="1"/>
                            <Label Grid.Row="4" Grid.Column="3" BorderBrush="#FF7C067D" BorderThickness="1"/>
                            <Label Grid.Row="4" Grid.Column="4" BorderBrush="#FF7C067D" BorderThickness="1"/>
                            <Label Grid.Row="4" Grid.Column="5" BorderBrush="#FF7C067D" BorderThickness="1"/>

                            <Label Grid.Row="5" Grid.Column="0" BorderBrush="#FF7C067D" BorderThickness="1"/>
                            <Label Grid.Row="5" Grid.Column="1" BorderBrush="#FF7C067D" BorderThickness="1"/>
                            <Label Grid.Row="5" Grid.Column="2" BorderBrush="#FF7C067D" BorderThickness="1"/>
                            <Label Grid.Row="5" Grid.Column="3" BorderBrush="#FF7C067D" BorderThickness="1"/>
                            <Label Grid.Row="5" Grid.Column="4" BorderBrush="#FF7C067D" BorderThickness="1"/>
                            <Label Grid.Row="5" Grid.Column="5" BorderBrush="#FF7C067D" BorderThickness="1"/>

                            
                            
                        </Grid>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="Ranking" Padding="40,5">

                <Grid Background="#FFE5E5E5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="4*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0" Grid.ColumnSpan="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0">
                            <StackPanel>
                                <TextBox Margin="10,15" Text="Search" />
                            </StackPanel>
                        </Grid>
                        <Grid Grid.Column="1">
                            <Label Content="Jugadores" HorizontalAlignment="Center" FontSize="16" FontWeight="Bold" Margin="0,10,0,0" Foreground="#FF7C067D"/>
                        </Grid>
                        
                    </Grid>

                    <Grid Grid.Row="1" Grid.ColumnSpan="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <DataGrid x:Name="dgJugador" Grid.Column="0" Margin="15" AutoGenerateColumns="False" SelectionChanged="dgJugador_SelectionChanged_1">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="NICKNAME" Binding="{Binding nickname}" Width="*"/>
                                <DataGridTextColumn Header="FECHA JUGADOR" Binding="{Binding fechadejuego, StringFormat={}{0:dd/MM/yyyy}}" Width="*"/>
                                <DataGridTextColumn Header="NIVEL JUGADOR" Binding="{Binding nivel}" Width="*"/>
                                <DataGridTextColumn Header="PUNTUACION" Binding="{Binding puntuacion}" Width="*" MinWidth="80"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <Label Content="Nickname" HorizontalAlignment="Center" FontSize="13" Height="30"/>
                            <TextBox Background="White" x:Name="txtNickname" HorizontalAlignment="Center" Width="200" Height="25" FontSize="14"/>
                            <Label Content="Puntuacion" HorizontalAlignment="Center" FontSize="13"/>
                            <TextBox Background="White" x:Name="txtPuntuacion" HorizontalAlignment="Center" Width="200" Height="25" FontSize="14"/>
                            <DatePicker x:Name="dpFechadejuego"  HorizontalAlignment="Center" Width="200" Height="25" FontSize="14" Margin="0,10,0,0" SelectedDateFormat="Short"/>
                            <Label Content="Nivel" HorizontalAlignment="Center" FontSize="13"/>
                            
                            <TextBox Background="White" x:Name="txtNivel" HorizontalAlignment="Center" Width="200" Height="25" FontSize="14"/>
                        </StackPanel>
                    </Grid>
                    <Grid Grid.Row="2" Margin="5,5,5,5" Grid.ColumnSpan="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0">
                            <Image Source="/logotipo-ies-maestredecalatrava-1.png" Stretch="Fill"/>
                        </Grid>
                        <Grid Grid.Column="1">
                            <Button x:Name="btnAgregar" Content="Agregar" Width="100" Height="30" HorizontalAlignment="Center" Background="#FF7C067D" Foreground="White" Click="btnAgregar_Click"/>
                        </Grid>
                        <Grid Grid.Column="2">
                            <Button x:Name="btnModificar" Content="Modificar" Width="100" Height="30" HorizontalAlignment="Center" Background="#FF7C067D" Foreground="White" Click="btnModificar_Click"/>
                        </Grid>
                        <Grid Grid.Column="3">
                            <Button x:Name="btnEliminar" Content="Eliminar" Width="100" Height="30"  HorizontalAlignment="Center"  Background="#FF7C067D" Foreground="White" Click="btnEliminar_Click"/>
                        </Grid>
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
