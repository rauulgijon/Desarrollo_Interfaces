<Window x:Class="Ejercicio3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="66" />
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid HorizontalAlignment="Center" Height="86" VerticalAlignment="Center" Width="800" Background="#FFCC1CD6">
            <Label Content="SERPIENTE" HorizontalAlignment="Center" VerticalAlignment="Center" Height="44" Width="136" FontSize="26" Foreground="White"/>
        </Grid>


        <TabControl Grid.Row="1" TabStripPlacement="Top">



            <TabItem Header="INICIALIZACIÓN" Margin="-2,-2,-3,0">
                <Grid Background="#FFE5E5E5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="130"/>
                        <RowDefinition Height="20" />
                        <RowDefinition Height="200"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="57"/>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="175"/>
                        <ColumnDefinition Width="71*"/>
                        <ColumnDefinition Width="70*"/>
                        <ColumnDefinition Width="50*"/>


                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Vertical" Margin="0,0,0,20">
                        <Label Name="lblNParedes" Content="Número de paredes" Grid.Row="1" Grid.Column="1" Margin="10,10,10,5"/>
                        <TextBox Name="txtNParedes" Grid.Row="1" Grid.Column="1" Margin="10,0,10,10"/>
                        <Label Name="lblJugador" Content="NICK JUGADOR" Grid.Row="1" Grid.Column="1" Margin="10,0,10,10" HorizontalAlignment="Center"/>

                    </StackPanel>

                    <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Vertical" Margin="10,10,10,37">
                        <Button Name="btMasParedes" Click="masParedes" Content="+" Width="100" Margin="10,10,0,0" HorizontalAlignment="Left"/>
                        <Button Name="btMenosParedes" Click="menosParedes" Content="-" Width="100" Margin="10,5,10,10" HorizontalAlignment="Left"/>

                        <TextBox Name="txtNickJugador" Grid.Row="1" Grid.Column="1" Margin="10,0,10,10" Grid.RowSpan="3" />

                    </StackPanel>

                    <StackPanel Grid.Row="0" Grid.Column="3" Orientation="Vertical" Margin="0,0,0,54">
                        <Label Name="lblNRatones" Content="Número de ratones" Grid.Row="1" Grid.Column="1" Margin="10,10,10,10"/>
                        <TextBox Name="txtNatones" Grid.Row="1" Grid.Column="1" Margin="10,0,10,10"/>

                    </StackPanel>
                    <StackPanel Grid.Row="0" Grid.Column="4" Orientation="Vertical" Margin="10,10,10,10">
                        <Button Name="btMasRatones" Content="+" Width="100" Margin="10,20,0,0" HorizontalAlignment="Left"/>
                        <Button Name="btMenosRatones" Content="-" Width="100" Margin="10,10,10,10" HorizontalAlignment="Left"/>


                    </StackPanel>
                    <Button Name="btnIniciarJuego" Content="Iniciar Juego" Grid.Row="0" Grid.Column="4" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,20,15" FontSize="15" Height="24" Width="87" Grid.ColumnSpan="2"/>
                    <Rectangle Grid.Column="1" Fill="Yellow" Grid.ColumnSpan="4" RadiusX="10" RadiusY="10"  Height="20" Grid.Row="1"/>

                    <Image Grid.Column="5" Margin="5,140,-2,10" Grid.Row="2" Source="/logotipo-ies-maestredecalatrava-1.png" Stretch="Fill"/>
                    <Grid Name="GridTable" ShowGridLines="True" Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="4" Margin="0,10,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>

                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>


                        </Grid.RowDefinitions>
                    </Grid>
                    <Label Grid.Column="1" Content="R" HorizontalAlignment="Left" Margin="153,12,0,0" Grid.Row="2" VerticalAlignment="Top"/>
                    <Label Grid.Column="2" Content="R" HorizontalAlignment="Center" Margin="0,133,0,0" Grid.Row="2" VerticalAlignment="Top" RenderTransformOrigin="0.058,0.35"/>
                    <Label Grid.Column="3" Content="R" HorizontalAlignment="Left" Grid.Row="2" VerticalAlignment="Top" Margin="115,74,0,0"/>
                    <Label Grid.Column="1" Content="P" HorizontalAlignment="Left" Margin="153,105,0,0" Grid.Row="2" VerticalAlignment="Top" Foreground="Green"/>
                    <Label Grid.Column="3" Content="P" HorizontalAlignment="Left" Margin="115,100,0,0" Grid.Row="2" VerticalAlignment="Top" Foreground="Green"/>

                </Grid>
            </TabItem>




            <TabItem Header="RANKING" Height="20" VerticalAlignment="Center" >
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50*" MinWidth="300"/>
                        <ColumnDefinition Width="250*"/>
                        <ColumnDefinition Width="97*"/>
                        <ColumnDefinition Width="47*"/>
                        <ColumnDefinition Width="350"/>
                    </Grid.ColumnDefinitions>

                    <DataGrid x:Name="dataGridPersonas" Grid.Row="1" Grid.Column="0" Margin="10,10,10,10" MinWidth="300" SelectionChanged="dataGridPersonas_SelectionChanged" AutoGenerateColumns="False" Grid.ColumnSpan="4">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="auto" />
                            <DataGridTextColumn Header="Fecha Juego" Binding="{Binding Fecha}" Width="auto" />
                            <DataGridTextColumn Header="Nivel Jugador" Binding="{Binding Nivel}" Width="auto" />
                            <DataGridTextColumn Header="Puntuación Obtenida" Binding="{Binding Puntuacion}" Width="auto" />

                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Row="0" Grid.RowSpan="2" Grid.Column="4" Margin="10,0,20,0" VerticalAlignment="Top">
                        <Label Content="JUGADOR" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center"/>
                        <Label Content="NICKNAME" FontSize="14" Margin="0,5,0,2"/>
                        <TextBox x:Name="txtNombre" Height="25" FontSize="14" Margin="0,0,0,5"/>
                        <Label Content="PUNTUACIÓN" FontSize="14" Margin="0,3,0,2"/>
                        <TextBox x:Name="txtPuntos" Height="25" FontSize="14" Margin="0,0,0,5"/>

                        <StackPanel Orientation="Horizontal">
                            <Label x:Name="lbles" Content="" Margin="0,0,40,0" />
                            <Label x:Name="lblFecha" Content="FECHA:" Margin="0,0,20,0"/>
                            <TextBox Name="txtFecha" Width="100" Margin="0,0,0,0"/>


                            <DatePicker x:Name="datePickerFechaNacimiento" Height="30" Width="30" SelectedDateFormat="Short" />

                        </StackPanel>
                        <Label Content="NIVEL" FontSize="14" Margin="0,5,0,2"/>
                        <ComboBox x:Name="cmbNivel" Height="25" FontSize="14" Margin="0,0,0,5">
                            <ComboBoxItem Content="1" Tag="1"/>
                            <ComboBoxItem Content="2" Tag="2"/>
                            <ComboBoxItem Content="3" Tag="3"/>
                            <ComboBoxItem Content="4" Tag="4"/>
                            <ComboBoxItem Content="5" Tag="5"/>
                            <ComboBoxItem Content="6" Tag="6"/>
                            <ComboBoxItem Content="7" Tag="7"/>
                            <ComboBoxItem Content="8" Tag="8"/>
                            <ComboBoxItem Content="9" Tag="9"/>
                            <ComboBoxItem Content="10" Tag="10"/>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Grid.Column="4" Orientation="Horizontal" HorizontalAlignment="Left" Margin="42,0,0,0" VerticalAlignment="Center">
                        <Button x:Name="btnAgregar" Content="Agregar" Width="90" Height="30" Margin="3" Click="btnAgregar_Click"/>
                        <Button x:Name="btnModificar" Content="Modificar" Width="90" Height="30" Margin="3" Click="btnModificar_Click"/>
                        <Button x:Name="btnEliminar" Content="Eliminar" Width="90" Height="30" Margin="3" Click="btnEliminar_Click"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
